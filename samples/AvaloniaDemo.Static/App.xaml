<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:static="clr-namespace:Dock.Model.Controls;assembly=Dock.Model.Avalonia.Static"
             x:Class="AvaloniaDemo.App">
    <Application.Styles>
        <StyleInclude Source="avares://Avalonia.Themes.Default/DefaultTheme.xaml"/>
        <StyleInclude Source="avares://Avalonia.Themes.Default/Accents/BaseLight.xaml"/>
        <StyleInclude Source="avares://Dock.Avalonia.Themes.Default/DefaultTheme.xaml"/>
        <StyleInclude Source="avares://Dock.Avalonia.Themes.Metro/DefaultTheme.xaml"/>
    </Application.Styles>
    <Application.DataTemplates>
        <DataTemplate DataType="static:StaticTool">
            <ContentControl Content="{Binding Id}" ContentTemplate="{Binding Content}"/>
        </DataTemplate>
        <DataTemplate DataType="static:StaticDocument">
            <ContentControl Content="{Binding Id}" ContentTemplate="{Binding Content}"/>
        </DataTemplate>
    </Application.DataTemplates>
</Application>
