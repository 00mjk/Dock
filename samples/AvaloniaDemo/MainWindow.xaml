<Window x:Class="AvaloniaDemo.MainWindow"
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:i="clr-namespace:Avalonia.Xaml.Interactivity;assembly=Avalonia.Xaml.Interactivity"
        xmlns:ia="clr-namespace:Avalonia.Xaml.Interactions.Core;assembly=Avalonia.Xaml.Interactions"
        xmlns:id="clr-namespace:Dock.Avalonia;assembly=Dock.Avalonia"
        xmlns:idc="clr-namespace:Dock.Avalonia.Controls;assembly=Dock.Avalonia"
        xmlns:local="clr-namespace:AvaloniaDemo;assembly=AvaloniaDemo"
        UseLayoutRounding="True"
        WindowState="Normal" WindowStartupLocation="CenterScreen"
        Title="Dock Avalonia Demo" Height="700" Width="1200">
    <Window.Styles>
        <StyleInclude Source="resm:Dock.Avalonia.Controls.DockPanelSplitter.xaml?assembly=Dock.Avalonia"/>
    </Window.Styles>
    <Window.DataTemplates>
        <DataTemplate DataType="local:InitView">
            <Grid>
                <StackPanel>
                    <TextBlock Text="{Binding Id}"/>
                    <TextBlock Text="{Binding Title}"/>
                    <TextBlock Text="{Binding Context}"/>
                    <Button Content="Main" Command="{Binding Context.Navigate}" CommandParameter="Main"/>
                </StackPanel>
            </Grid>
        </DataTemplate>
        <DataTemplate DataType="local:CenterView">
            <Grid Width="300" Height="300" Background="LightGray">
                <StackPanel>
                    <TextBlock Text="{Binding Id}"/>
                    <TextBlock Text="{Binding Title}"/>
                    <TextBlock Text="{Binding Context}"/>
                </StackPanel>
            </Grid>
        </DataTemplate>
        <DataTemplate DataType="local:LeftTopView1">
            <Grid>
                <StackPanel>
                    <TextBlock Text="{Binding Id}"/>
                    <TextBlock Text="{Binding Title}"/>
                    <TextBlock Text="{Binding Context}"/>
                </StackPanel>
            </Grid>
        </DataTemplate>
        <DataTemplate DataType="local:LeftTopView2">
            <Grid>
                <StackPanel>
                    <TextBlock Text="{Binding Id}"/>
                    <TextBlock Text="{Binding Title}"/>
                    <TextBlock Text="{Binding Context}"/>
                </StackPanel>
            </Grid>
        </DataTemplate>
        <DataTemplate DataType="local:LeftTopView3">
            <Grid>
                <StackPanel>
                    <TextBlock Text="{Binding Id}"/>
                    <TextBlock Text="{Binding Title}"/>
                    <TextBlock Text="{Binding Context}"/>
                </StackPanel>
            </Grid>
        </DataTemplate>
        <DataTemplate DataType="local:LeftBottomView1">
            <Grid>
                <StackPanel>
                    <TextBlock Text="{Binding Id}"/>
                    <TextBlock Text="{Binding Title}"/>
                    <TextBlock Text="{Binding Context}"/>
                </StackPanel>
            </Grid>
        </DataTemplate>
        <DataTemplate DataType="local:LeftBottomView2">
            <Grid>
                <StackPanel>
                    <TextBlock Text="{Binding Id}"/>
                    <TextBlock Text="{Binding Title}"/>
                    <TextBlock Text="{Binding Context}"/>
                </StackPanel>
            </Grid>
        </DataTemplate>
        <DataTemplate DataType="local:LeftBottomView3">
            <Grid>
                <StackPanel>
                    <TextBlock Text="{Binding Id}"/>
                    <TextBlock Text="{Binding Title}"/>
                    <TextBlock Text="{Binding Context}"/>
                </StackPanel>
            </Grid>
        </DataTemplate>
        <DataTemplate DataType="local:RightTopView1">
            <Grid>
                <StackPanel>
                    <TextBlock Text="{Binding Id}"/>
                    <TextBlock Text="{Binding Title}"/>
                    <TextBlock Text="{Binding Context}"/>
                </StackPanel>
            </Grid>
        </DataTemplate>
        <DataTemplate DataType="local:RightTopView2">
            <Grid>
                <StackPanel>
                    <TextBlock Text="{Binding Id}"/>
                    <TextBlock Text="{Binding Title}"/>
                    <TextBlock Text="{Binding Context}"/>
                </StackPanel>
            </Grid>
        </DataTemplate>
        <DataTemplate DataType="local:RightTopView3">
            <Grid>
                <StackPanel>
                    <TextBlock Text="{Binding Id}"/>
                    <TextBlock Text="{Binding Title}"/>
                    <TextBlock Text="{Binding Context}"/>
                </StackPanel>
            </Grid>
        </DataTemplate>
        <DataTemplate DataType="local:RightBottomView1">
            <Grid>
                <StackPanel>
                    <TextBlock Text="{Binding Id}"/>
                    <TextBlock Text="{Binding Title}"/>
                    <TextBlock Text="{Binding Context}"/>
                </StackPanel>
            </Grid>
        </DataTemplate>
        <DataTemplate DataType="local:RightBottomView2">
            <Grid>
                <StackPanel>
                    <TextBlock Text="{Binding Id}"/>
                    <TextBlock Text="{Binding Title}"/>
                    <TextBlock Text="{Binding Context}"/>
                </StackPanel>
            </Grid>
        </DataTemplate>
        <DataTemplate DataType="local:RightBottomView3">
            <Grid>
                <StackPanel>
                    <TextBlock Text="{Binding Id}"/>
                    <TextBlock Text="{Binding Title}"/>
                    <TextBlock Text="{Binding Context}"/>
                </StackPanel>
            </Grid>
        </DataTemplate>
        <DataTemplate DataType="local:MainView">
            <Grid>
                <ContentControl Content="{Binding CurrentView}"/>
            </Grid>
        </DataTemplate>
    </Window.DataTemplates>
    <Grid RowDefinitions="Auto,*">
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <Button Content="Back" Command="{Binding Layout.GoBack}" IsEnabled="{Binding Layout.CanGoBack}" Margin="4"/>
            <Button Content="Forward" Command="{Binding Layout.GoForward}" IsEnabled="{Binding Layout.CanGoForward}" Margin="4"/>
            <TextBox x:Name="id" Text="Init" Width="100" Margin="4"/>
            <Button Content="Navigate" Command="{Binding Layout.Navigate}" CommandParameter="{Binding #id.Text}" Margin="4"/>
        </StackPanel>
        <idc:DockControl DataContext="{Binding Layout}" Margin="4" Grid.Row="1"/>
    </Grid>
</Window>
