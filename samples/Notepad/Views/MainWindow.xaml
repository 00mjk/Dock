<Window x:Class="Notepad.Views.MainWindow"
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:views="clr-namespace:Notepad.Views;assembly=Notepad"
        mc:Ignorable="d"
        d:DesignWidth="900" d:DesignHeight="600"
        UseLayoutRounding="True" RenderOptions.BitmapInterpolationMode="HighQuality"
        WindowState="Normal" WindowStartupLocation="CenterScreen"
        Foreground="{DynamicResource ThemeForegroundBrush}"
        BorderThickness="1" BorderBrush="{DynamicResource ThemeBorderLowBrush}"
        Title="Notepad" Height="600" Width="900">
    <views:MainView/>
</Window>
