<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:Notepad"
             x:Class="Notepad.App">
    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
    <Application.Styles>
        <!-- Default Theme -->
        <!-- <StyleInclude Source="avares://Avalonia.Themes.Default/DefaultTheme.xaml"/> -->
        <!-- <StyleInclude Source="avares://Avalonia.Themes.Default/Accents/BaseLight.xaml"/> -->
        <!-- <StyleInclude Source="avares://Avalonia.Themes.Default/Accents/BaseDark.xaml"/> -->
        <!-- Fluent Theme -->
        <FluentTheme Mode="Light"/>
        <!-- <FluentTheme Mode="Dark"/> -->
        <!-- Dock Theme -->
        <StyleInclude Source="avares://Dock.Avalonia/Themes/Default/DefaultTheme.axaml"/>
        <!-- Dock Accent (Default/Fluent) -->
        <!-- <StyleInclude Source="avares://Dock.Avalonia/Themes/Accents/Default.axaml"/> -->
        <StyleInclude Source="avares://Dock.Avalonia/Themes/Accents/Fluent.axaml"/>
    </Application.Styles>
</Application>
