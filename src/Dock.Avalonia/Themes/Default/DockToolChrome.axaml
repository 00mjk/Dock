<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:id="using:Dock.Avalonia"
        xmlns:idc="using:Dock.Avalonia.Controls"
        xmlns:core="using:Dock.Model.Core">
    <Style Selector="Button.chromeButton">
        <Setter Property="Margin" Value="2 0 0 0" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Background" Value="Transparent" />
    </Style>
    <Style Selector="idc|DockToolChrome">
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="Template">
            <ControlTemplate>
                <Grid RowDefinitions="Auto,*" 
                      x:DataType="core:IDock" 
                      x:CompileBindings="True">
                    <Border x:Name="PART_Border" 
                            BorderBrush="{DynamicResource DockThemeBorderLowBrush}">
                        <Grid x:Name="PART_Grip">
                            <DockPanel LastChildFill="True" Margin="8 0">
                                <Panel DockPanel.Dock="Left" >
                                    <TextBlock x:Name="PART_Title"
                                               Text="{Binding ActiveDockable.Title, FallbackValue=TITLE}"
                                               HorizontalAlignment="Left"
                                               TextAlignment="Left"
                                               VerticalAlignment="Stretch"
                                               Margin="0 4 8 4"
                                               FontSize="{DynamicResource DockFontSizeNormal}"/>
                                </Panel>
                                <Button Name="PART_CloseButton" 
                                        Classes="chromeButton" 
                                        DockPanel.Dock="Right"
                                        Command="{Binding Owner.Factory.CloseDockable}" 
                                        CommandParameter="{Binding ActiveDockable}" 
                                        x:CompileBindings="False">
                                    <Image Source="avares://Dock.Avalonia/Assets/PinClose_Dark.png" 
                                           Height="13" 
                                           Width="13" 
                                           Stretch="None" />
                                </Button>
                                <Button x:Name="PART_PinButton" 
                                        Classes="chromeButton" 
                                        DockPanel.Dock="Right" 
                                        Command="{Binding Owner.Factory.PinDockable}" 
                                        CommandParameter="{Binding ActiveDockable}" 
                                        x:CompileBindings="False">
                                    <Image Source="avares://Dock.Avalonia/Assets/PinAutoHide_Dark.png" 
                                           Height="13" 
                                           Width="13" 
                                           Stretch="None" />
                                </Button>
                                <Button x:Name="PART_MenuButton" 
                                        Classes="chromeButton" 
                                        DockPanel.Dock="Right">
                                    <Image Source="avares://Dock.Avalonia/Assets/PinMenu_Dark.png" 
                                           Height="13" 
                                           Width="13" 
                                           Stretch="None" />
                                </Button>
                                <Grid x:Name="PART_Grid"
                                      Height="5" 
                                      VerticalAlignment="Center"
                                      Margin="0 0 10 0">
                                    <Grid.Background>
                                        <VisualBrush SourceRect="0,0,4,5" 
                                                     DestinationRect="0,0,4,5" 
                                                     TileMode="Tile" 
                                                     Stretch="UniformToFill">
                                            <VisualBrush.Visual>
                                                <Canvas Width="4" Height="5" Background="Transparent">
                                                    <Rectangle Height="1" Width="1" Fill="#474747" />
                                                    <Rectangle Height="1" Width="1" Canvas.Top="2" Canvas.Left="2" Fill="#474747" />
                                                    <Rectangle Height="1" Width="1" Canvas.Top="4" Fill="#474747" />
                                                </Canvas>
                                            </VisualBrush.Visual>
                                        </VisualBrush>
                                    </Grid.Background>
                                </Grid>
                            </DockPanel>
                        </Grid>
                    </Border>
                    <ContentPresenter x:Name="PART_ContentPresenter"
                                      Grid.Row="1"
                                      Background="{DynamicResource DockThemeBackgroundBrush}"
                                      BorderBrush="{TemplateBinding BorderBrush}"
                                      BorderThickness="{TemplateBinding BorderThickness}"
                                      Content="{TemplateBinding Content}"
                                      Padding="{TemplateBinding Padding}" />
                </Grid>
            </ControlTemplate>
        </Setter>
    </Style>
    <Style Selector="idc|DockToolChrome /template/ Border#PART_Border">
        <Setter Property="BorderThickness" Value="1 1 1 0" />
    </Style>
    <Style Selector="idc|DockToolChrome:floating /template/ Border#PART_Border">
        <Setter Property="BorderThickness" Value="0" />
    </Style>
    <Style Selector="idc|DockToolChrome /template/ TextBlock#PART_Title">
        <Setter Property="Background" Value="{DynamicResource DockThemeBackgroundBrush}" />
    </Style>
    <Style Selector="idc|DockToolChrome:active /template/ TextBlock#PART_Title">
        <Setter Property="Background" Value="{DynamicResource DockThemeAccentBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource DockApplicationAccentForegroundBrush}" />
    </Style>
    <Style Selector="idc|DockToolChrome /template/ Grid#PART_Grip">
        <Setter Property="Background" Value="{DynamicResource DockThemeBackgroundBrush}" />
    </Style>
    <Style Selector="idc|DockToolChrome /template/ Grid#PART_Grip">
        <Setter Property="(id:DockProperties.IsDragArea)" Value="True" />
    </Style>
    <Style Selector="idc|DockToolChrome:floating /template/ Grid#PART_Grip">
        <Setter Property="(id:DockProperties.IsDragArea)" Value="False" />
    </Style>
    <Style Selector="idc|DockToolChrome:active /template/ Grid#PART_Grip">
        <Setter Property="Background" Value="{DynamicResource DockThemeAccentBrush}" />
    </Style>
</Styles>
